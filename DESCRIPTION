Package: ridgregextra
Type: Package
Title: Ridge Regression Parameter Estimation
Version: 0.1.0
Authors@R: c(
    person("Filiz", "Karadag", , "filiz.karadag@ege.edu.tr", role = c("aut"),
           comment = c(ORCID = "0000-0002-0116-7772")),
